{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    },
    "include": ["./src", "server.ts"],
    "exclude": ["node_modules"]
}